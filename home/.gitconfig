[user]
	email = lexmail@gmail.com
	name = Alexander
[log]
	decorate = true
	abbrevCommit = true
[color]
	ui = always
	status = auto
	branch = auto
  diff = auto
[merge]
	ff = only
	conflictstyle = diff3
[mergetool]
	keepBackup = false
[apply]
	whitespace = nowarn
[push]
	default = simple
	followTags = true
[transfer]
	fsckobjects = false
[http]
  sslVerify = true
[help]
  autocorrect = 1
[github]
  user = alexandervantrijffel
[web]
  browser = google-chrome
[status]
  showUntrackedFiles = all
[credential "https://gitlab.com"]
	avtnl = avtnl
[credential]
	helper = store
	helper = !/usr/lib/jvm/java-11-openjdk-amd64/bin/java -Ddebug=false -Djava.net.useSystemProxies=true -jar /opt/git-credential-manager/git-credential-manager-2.0.4.jar
	canFallBackToInsecureStore = true
[core]
	editor = nvim
