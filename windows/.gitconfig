[user]
	email = alexander@lost.space
	name = Alexander van Trijffel
[log]
	decorate = true
	abbrevCommit = true
[core]
	autocrlf = false
	excludesfile = ~/.gitignore
[credential]
	helper = wincred
[color]
        diff = auto
        status = auto
        branch = auto
        ui = always	
[apply]
        whitespace = nowarn
[merge]
        conflictstyle = diff3
        tool = meld
        renormalize = true
[mergetool "meld"]
        prompt = false
        keepBackup = false
        keepTemporaries = false
        path = C:\\Program Files (x86)\\Meld\\meld\\meld.exe
[mergetool]
        keepBackup = false
		ff = only
[diff]
	tool = meld
[difftool]
        prompt = false
[difftool "meld"]
        path = C:\\Program Files (x86)\\Meld\\Meld.exe
[help]
        autocorrect = 1
[push]
        # See `git help config` (search for push.default)
        # for more information on different options of the below setting.
        #
        # Setting to git 2.0 default to surpress warning message
        default = simple
	followTags = true
[github]
        user = alexandervantrijffel
[web]
        browser = google-chrome
[status]
        showUntrackedFiles = all
[transfer]
        fsckobjects = true
